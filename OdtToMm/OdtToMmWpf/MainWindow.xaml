        <TextBox x:Name="ODTtb" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="22" Margin="133,10,-263,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="210" Background="#FFBFE7F9" BorderThickness="0" MouseDown="selOdt"/>
        <TextBox x:Name="MMtb" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="22" Margin="133,57,-263,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="210" Background="#FFBFE7F9" BorderThickness="0" MouseDown="selSave"/>
        <ProgressBar x:Name="progressBar1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="34" Margin="10,167,-263,-59" VerticalAlignment="Top" Width="333"/>
        <Label x:Name="label1" Grid.ColumnSpan="2" Content="Label" HorizontalAlignment="Left" Height="26" Margin="10,206,-263,-90" VerticalAlignment="Top" Width="333"/>
    </Grid>
</Window>
