        xmlns:local="clr-namespace:OdtToMmWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="264.754" Width="359.426">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Height="235" Margin="0,0,0,-1" Width="349">
        <Button x:Name="ODTbtn" Grid.ColumnSpan="2" Content="Choose ODT file" HorizontalAlignment="Left" Height="42" Margin="10,10,-41,0" VerticalAlignment="Top" Width="111" Click="selOdt" Background="#FF9AE9F5" BorderThickness="0"/>
        <Button x:Name="MMbtn" Grid.ColumnSpan="2" Content="Save as" HorizontalAlignment="Left" Height="42" Margin="10,57,-41,0" VerticalAlignment="Top" Width="111" Background="#FF9AE9F5" BorderThickness="0" Click="selSave"/>
